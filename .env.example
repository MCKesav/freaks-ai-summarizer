# =============================================================================
# FREAKS AI SUMMARIZER - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# FIREBASE CONFIGURATION (Frontend)
# =============================================================================
# Get these from Firebase Console → Project Settings → General → Your apps
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# FIREBASE ADMIN SDK (Backend)
# =============================================================================
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
# Save the file as firebase-service-account.json in backend/pipeline/ folder
FIREBASE_SERVICE_ACCOUNT_PATH=./backend/pipeline/firebase-service-account.json
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# From: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Frontend Supabase (anon key - safe for frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# JINA READER API (for URL extraction)
# =============================================================================
# Get from: https://jina.ai/reader
JINA_READER_API_KEY=your-jina-api-key
VITE_JINA_READER_API_KEY=your-jina-api-key

# =============================================================================
# GEMINI AI API (for summarization)
# =============================================================================
VITE_GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# BACKEND URL
# =============================================================================
VITE_BACKEND_URL=http://localhost:8000

# =============================================================================
# SYSTEM PATHS (Optional - auto-detected on most systems)
# =============================================================================
# Windows examples:
# JAVA_HOME=C:/Program Files/Java/jdk-17
# JAVA_PATH=C:/Program Files/Java/jdk-17/bin/java.exe
# FFMPEG_PATH=C:/ProgramData/chocolatey/bin/ffmpeg.exe

# macOS/Linux examples:
# JAVA_PATH=/usr/bin/java
# FFMPEG_PATH=/usr/local/bin/ffmpeg

# =============================================================================
# OLLAMA (Local LLM - Optional)
# =============================================================================
# LLAMA_API_URL=http://localhost:11434/api/generate
