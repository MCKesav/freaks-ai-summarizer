# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this to .env and fill in your values

# Firebase Admin SDK
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Firebase Storage Bucket
# Format: your-project-id.appspot.com
FIREBASE_STORAGE_BUCKET=freaks-ai-summarizer.appspot.com

# Supabase
# From: Supabase Dashboard → Settings → API
SUPABASE_URL=https://dvmnfwsvpwnaqlywkavi.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Jina Reader API (optional, but recommended for URL extraction)
# Get from: https://jina.ai/reader
JINA_READER_API_KEY=your-jina-api-key-here

# LLaMA API (Ollama)
# Default for local Ollama installation
LLAMA_API_URL=http://localhost:11434/api/generate

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Whisper model size (tiny, base, small, medium, large)
# Larger = more accurate, slower, more VRAM
WHISPER_MODEL=base

# Max file size in MB
MAX_FILE_SIZE_MB=100

# Summary max tokens
SUMMARY_MAX_TOKENS=2048
